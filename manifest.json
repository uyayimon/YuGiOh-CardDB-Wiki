{
  "name": "遊戯王DB⇔Wiki",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "遊戯王公式カードデータベースと遊戯王カードWikiのカード詳細ページを相互に行き来できる拡張機能です。ラッシュデュエルにも対応しています。",
  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "64": "icons/icon-64x64.png",
    "96": "icons/icon-96x96.png",
    "128": "icons/icon-128x128.png"
  },

  "permissions": ["tabs", "storage"],

  "content_scripts": [
    {
      "matches": [
        "https://www.db.yugioh-card.com/*/*cid*",
        "https://yugioh-wiki.net/*%A1%D4%*",
        "https://rush.yugioh-wiki.net/*%E3%80%8A*",
        "https://yugioh-wiki.net/rush/*%E3%80%8A*"
      ],
      "js": ["encoding.js", "PDC_list.js", "navigation.js"],
      "css": ["navigation.css"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_title": "遊戯王DB⇔Wiki",
    "default_popup": "popup.html"
  },

  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "MacCtrl+Shift+Left"
      }
    }
  },

  "web_accessible_resources": ["icons/iconDW.png"],

  "homepage_url": "https://github.com/uyayimon/YuGiOh-CardDB-Wiki/wiki"
}
